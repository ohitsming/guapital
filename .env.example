# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Environment URL
NEXT_PUBLIC_ENV_URL=http://localhost:3000

# Plaid Configuration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-sandbox
PLAID_ENV=sandbox  # sandbox, development, or production

# Alchemy API (for crypto wallet tracking)
ALCHEMY_API_KEY=your-alchemy-api-key

# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Sentry (for error tracking and monitoring)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-url
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Disable Sentry in development by default to save free tier quota (5K errors/month)
# Only enable when testing Sentry integration
# SENTRY_ENABLED=true  # Uncomment to enable server-side error tracking in dev
# NEXT_PUBLIC_SENTRY_ENABLED=true  # Uncomment to enable client-side error tracking in dev
